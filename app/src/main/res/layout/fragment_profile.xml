<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:fillViewport="true"
    android:background="@color/light_grey"
    tools:context=".ui.patient.fragment.ProfileFragment" >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="32dp"
            android:contentDescription="Gambar Pasien"
            android:src="@drawable/dummyimage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="42dp"
            android:text="HMS Vanguard"
            android:fontFamily="@font/poppinsbold"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/profile_image"
            app:layout_constraintTop_toTopOf="@+id/profile_image" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profile_id_patient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppinsregular"
            android:text="HMS Vanguard"
            android:textAlignment="textStart"
            android:textColor="@color/black_dim"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/profile_name"
            app:layout_constraintTop_toBottomOf="@+id/profile_name" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
            android:text="mail@yahoo.com"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/profile_image"
            app:layout_constraintStart_toStartOf="@+id/profile_id_patient" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:fontFamily="@font/poppinsbold"
            android:text="About You"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/profile_image"
            app:layout_constraintTop_toBottomOf="@+id/profile_image" />

        <View
            android:id="@+id/arrow_back_button"
            android:layout_width="85dp"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="#000"
            app:layout_constraintStart_toStartOf="@+id/text_about"
            app:layout_constraintTop_toBottomOf="@+id/text_about" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profile_text_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Full Name"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/arrow_back_button"
            app:layout_constraintTop_toBottomOf="@+id/arrow_back_button" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profile_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/poppinsregular"
            android:text="HMS Vanguard"
            android:textAlignment="textStart"
            android:textColor="@color/grey"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/profile_text_full_name"
            app:layout_constraintTop_toBottomOf="@+id/profile_text_full_name" />

        <View
            android:id="@+id/hr2"
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/grey96"
            app:layout_constraintStart_toStartOf="@+id/profile_full_name"
            app:layout_constraintTop_toBottomOf="@+id/profile_full_name" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profile_text_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Nickname"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/hr2"
            app:layout_constraintTop_toBottomOf="@+id/hr2" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profile_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppinsregular"
            android:text="HMS Vanguard"
            android:textAlignment="textStart"
            android:textColor="@color/grey"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/profile_text_nickname"
            app:layout_constraintTop_toBottomOf="@+id/profile_text_nickname" />

        <View
            android:id="@+id/hr3"
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/grey96"
            app:layout_constraintStart_toStartOf="@+id/profile_nickname"
            app:layout_constraintTop_toBottomOf="@+id/profile_nickname" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profile_text_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Address"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/hr3"
            app:layout_constraintTop_toBottomOf="@+id/hr3" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profile_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppinsregular"
            android:text="HMS Vanguard"
            android:textAlignment="textStart"
            android:textColor="@color/grey"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/profile_text_address"
            app:layout_constraintTop_toBottomOf="@+id/profile_text_address" />

        <View
            android:id="@+id/hr4"
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/grey96"
            app:layout_constraintStart_toStartOf="@+id/profile_address"
            app:layout_constraintTop_toBottomOf="@+id/profile_address" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profile_text_id_doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Doctor ID"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/hr4"
            app:layout_constraintTop_toBottomOf="@+id/hr4" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profile_id_doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppinsregular"
            android:text="HMS Vanguard"
            android:textAlignment="textStart"
            android:textColor="@color/grey"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/profile_text_id_doctor"
            app:layout_constraintTop_toBottomOf="@+id/profile_text_id_doctor" />

        <View
            android:id="@+id/hr5"
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/grey96"
            app:layout_constraintStart_toStartOf="@+id/profile_id_doctor"
            app:layout_constraintTop_toBottomOf="@+id/profile_id_doctor" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profile_text_doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Doctor Name"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/hr5"
            app:layout_constraintTop_toBottomOf="@+id/hr5" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profile_doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppinsregular"
            android:text="HMS Vanguard"
            android:textAlignment="textStart"
            android:textColor="@color/grey"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/profile_text_doctor_name"
            app:layout_constraintTop_toBottomOf="@+id/profile_text_doctor_name" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Edit"
            android:backgroundTint="@color/light_blue_button"
            app:layout_constraintStart_toStartOf="@+id/profile_doctor_name"
            app:layout_constraintTop_toBottomOf="@+id/profile_doctor_name" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/light_red_button"
            android:fontFamily="@font/poppinsmedium"
            android:text="Logout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/button_edit"
            app:layout_constraintTop_toBottomOf="@+id/profile_doctor_name" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="52dp"
            android:text=" "
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_edit" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
